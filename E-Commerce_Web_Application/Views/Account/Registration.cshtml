@model E_Commerce_Web_Application.Models.Register
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Css/StyleSheet1.css" rel="stylesheet" />

<div class="row">



    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-sm-offset-4">
        <h3 class="col-sm-12">Create New Account</h3>
        @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-xs-2 form-lable Center" })
                <div class="col-xs-3">

                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailId, new { @class = "col-xs-2 form-lable Center" })
                <div class="col-xs-3">

                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Email Id" })
                    @Html.ValidationMessageFor(m => m.EmailId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-xs-2 form-lable Center" })
                <div class="col-xs-3">

                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-xs-2 form-lable Center" })
                <div class="col-xs-3">

                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Gender", new { @class = "col-xs-2 form-lable Center" })

                <div>
                    <div class="col-xs-3">
                        @Html.Label("Male")
                        @Html.RadioButtonFor(m => m.Gender, "M")
                        @Html.Label("Female")
                        @Html.RadioButtonFor(m => m.Gender, "F")
                        @Html.ValidationMessageFor(m=>m.Gender)
                    </div>

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-xs-2 form-lable Center" })
                <div class="col-xs-3">

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-2 col form-lable Center" })
                <div class="col-xs-3">

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Comfirm Password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-xs-1">
                    <button class=" btn btn-default">
                        Submit
                    </button>
                </div>
            </div>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>
@if (Session["NavbarHide"] == "true")
{
    <div class="footer navbar">
        <hr />
        <footer style="text-align: center">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
}
