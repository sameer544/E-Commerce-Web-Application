@model E_Commerce_Web_Application.Models.ViewModelCustomerAddressTable
<div>
    @{
        if (Model.Type == "Cancel")
        {
            <div style="border:solid 1px;padding:10px;border-color:gray">
                <div>
                    @Ajax.ActionLink("+ Add A New Address", "AddAddressInTable", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                </div>
            </div>
            <br />
            if (Model.CustomerAddresses != null)
            {
                foreach (var n in Model.CustomerAddresses)
                {
                    string div = "divEditAddressAndRemove" + n.id;
                    <div id="@div">
                        <div style="border:solid 1px;padding:10px;border-color:gray">
                            <div>
                                <div>
                                    <div class="col-sm-10">
                                        <label class="label-default ">@n.AddressType</label>
                                    </div>
                                    <div class="btn btn-group">
                                        @Ajax.ActionLink("Edit", "EditAddress", new { Id = n.id }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                                        @Ajax.ActionLink("Remove", "RemoveAddress", new { Id = n.id }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                                    </div>
                                </div>
                                <h3>@n.Name @n.ModileNumber</h3>
                                <h4>@n.Address</h4>
                                <h4>@n.City</h4>
                                <h4>@n.State</h4>
                                <h4>@n.PinCode</h4>
                            </div>
                        </div>
                    </div>
                    <br />
                }
            }
        }
        else if (Model.Type == "Save")
        {
            <div style="border:solid 1px;padding:10px;border-color:gray">
                <div>
                    @Ajax.ActionLink("+ Add A New Address", "AddAddressInTable", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                </div>
            </div>
            <br />
            if (Model.CustomerAddresses != null)
            {
                foreach (var n in Model.CustomerAddresses)
                {
                    string div = "divEditAddressAndRemove" + n.id;
                    <div id="@div">
                        <div style="border:solid 1px;padding:10px;border-color:gray">
                            <div>
                                <div>
                                    <div class="col-sm-10">
                                        <label class="label-default ">@n.AddressType</label>
                                    </div>
                                    <div class="btn btn-group">
                                        @Ajax.ActionLink("Edit", "EditAddress", new { Id = n.id }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                                        @Ajax.ActionLink("Remove", "RemoveAddress", new { Id = n.id }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                                    </div>
                                </div>
                                <h3>@n.Name @n.ModileNumber</h3>
                                <h4>@n.Address</h4>
                                <h4>@n.City</h4>
                                <h4>@n.State</h4>
                                <h4>@n.PinCode</h4>
                            </div>
                        </div>
                        <br />
                    </div>

                }
            }
        }
        else
        {
            if (Model.Type == "Fill")
            {
                <label class="label-danger">Fill All Information</label>
            }
            using (Ajax.BeginForm("AddAddressInTable1", "Account", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace }, new { @class = "form-Inline", role = "form" }))
            {
                <div style="border:solid 1px;padding:20px">
                    <div>
                        <h3>Add A New Address</h3>
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.Name, new { @class = "label-control col-sm-3" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter Name" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.ModileNumber, new { @class = "label-control col-sm-3" })
                        @Html.TextBoxFor(m => m.ModileNumber, new { @class = "Form-control", placeholder = "Enter Mobile Number" })
                        @Html.ValidationMessageFor(m => m.ModileNumber)
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.Address, new { @class = "label-control col-sm-3" })
                        @Html.TextBoxFor(m => m.Address, new { @class = "Form-control", placeholder = "Enter Address" })
                        @Html.ValidationMessageFor(m => m.Address)
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.PinCode, new { @class = "label-control col-sm-3" })
                        @Html.TextBoxFor(m => m.PinCode, new { @class = "Form-control", placeholder = "Enter PinCode(6 digit only)" })
                        @Html.ValidationMessageFor(m => m.PinCode)
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.City, new { @class = "label-control col-sm-3" })
                        @Html.TextBoxFor(m => m.City, new { @class = "Form-control", placeholder = "Enter City" })
                        @Html.ValidationMessageFor(m => m.City)
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.State, new { @class = "label-control col-sm-3" })
                        @Html.TextBoxFor(m => m.State, new { @class = "Form-control", placeholder = "Enter State" })
                        @Html.ValidationMessageFor(m => m.State)
                    </div>
                    <div class="form-group col-sm-12">
                        <h4>&nbsp;&nbsp;&nbsp;Home:@Html.RadioButtonFor(m => m.AddressType, "Home") Work:@Html.RadioButtonFor(m => m.AddressType, "Work")</h4>
                        @Html.ValidationMessageFor(m => m.AddressType)
                    </div>

                    <div class="btn btn-group">
                        <input type="submit" value="Cancel" class="btn btn-default" name="saveandchange" />
                        <input type="submit" value="Save" class="btn btn-default" name="saveandchange" />
                    </div>
                </div>
            }
            <hr />
            <br />
            if (Model.CustomerAddresses != null)
            {
                foreach (var n in Model.CustomerAddresses)
                {
                    string div = "divEditAddressAndRemove" + n.id;
                    <div id="@div">
                        <div style="border:solid 1px;padding:10px;border-color:gray">
                            <div>
                                <div>
                                    <div class="col-sm-10">
                                        <label class="label-default ">@n.AddressType</label>
                                    </div>
                                    <div class="btn btn-group">
                                        @Ajax.ActionLink("Edit", "EditAddress", new { Id = n.id }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                                        @Ajax.ActionLink("Remove", "RemoveAddress", new { Id = n.id }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divAddAddress", InsertionMode = InsertionMode.Replace })
                                    </div>
                                </div>
                                <h3>@n.Name @n.ModileNumber</h3>
                                <h4>@n.Address</h4>
                                <h4>@n.City</h4>
                                <h4>@n.State</h4>
                                <h4>@n.PinCode</h4>
                            </div>
                        </div>
                    </div>
                    <br />
                }
            }
        }
    }
</div>
