@model E_Commerce_Web_Application.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Css/StyleSheet1.css" rel="stylesheet" />
<h2></h2>



<div class="row">

    
    <div class="col-sm-offset-4  ">
        <h3>Login</h3>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-xs-2 col form-lable Center" })
                <div class="col-xs-3">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name or Email Address" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-xs-2 col form-lable Center" })
                <div class="col-xs-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-xs-1">
                    <input type="submit" class=" btn btn-default" value="Login" name="submit" />
                    
                </div>
            </div>
        }
        
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>

@if (Session["NavbarHide"] == "true")
{
    <div class="footer navbar-fixed-bottom col-sm-12">
        <hr />
        <footer style="text-align: center">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
}

