@model E_Commerce_Web_Application.Models.ViewModels
<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Login</h4>
            </div>
            <div class="modal-body" style="text-align:center;padding:100px">
                <div class="row">
                    <div>
                        @using (Html.BeginForm("LoginModal", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">

                                @Html.LabelFor(m => m.UserName, new { @class = "col-xs-3 col form-lable Center" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name or Email Address" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Password, new { @class = "col-xs-3 col form-lable Center" })
                                <div class="col-xs-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-1">
                                    <div class="input-group-btn">
                                        <input type="submit" class="Login btn btn-default" value="Login" name="submit" />
                                        @Html.ActionLink("Register", "Registration", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-default", id = "registerLink" })
                                    </div>
                                </div>
                            </div>
                            <script src="~/Scripts/jquery.validate.min.js"></script>
                            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

                        }
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="closeLoginModal" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

